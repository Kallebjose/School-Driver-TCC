<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/yll"
    >

    <TextView
        android:id="@+id/txt_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino:  ITB Brasílio Flores de Azevedo"
        android:textSize="18sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário de saída: 6:00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Horário de chegada: 6:50"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_ver_rota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Rota"
        android:backgroundTint="@color/black"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/bt_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir para o Chat"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"/>
</LinearLayout>
